# MediVault AI Agent Configuration
# Copy this file to .env and configure as needed

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_VISION_MODEL=llama3.2-vision
OLLAMA_TIMEOUT=120

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Security Settings
ENCRYPTION_KEY=  # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SESSION_SECRET=  # Generate with: python -c "import secrets; print(secrets.token_hex(32))"

# Database (local SQLite with optional SQLCipher)
DB_PATH=./data/medivault.db
DB_ENCRYPTION=true

# PHI Handling
PHI_RETENTION_DAYS=90
MINIMUM_NECESSARY_MODE=true  # Redact non-essential PHI before LLM calls
AUDIT_ENABLED=true
AUDIT_LOG_PATH=./logs/audit.log

# TLS (if serving beyond localhost)
TLS_ENABLED=false
TLS_CERT_PATH=
TLS_KEY_PATH=

# Rate Limiting
MAX_FILE_SIZE_MB=25
MAX_PAGES_PER_DOCUMENT=100

# Tesseract OCR
TESSERACT_CMD=tesseract  # Path to tesseract binary
TESSERACT_LANG=eng
